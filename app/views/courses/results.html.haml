.row
	.span11.offset1
		%center #{link_to @course, @url}

- if @lectures == []
	.row
		.span11.offset08
			%p No classes match your request. 
			%p Please note that this is a Spring 2013 search. Click the link above for more details

- else
	- @lectures.each do |lecture|
		- lec = @info[lecture[0]]
		.row
			.span3.offset1
				%h4= lec[:course].split[0...-3].join(' ')
				%h5= lec[:title]
				%p=  lec[:instructor]
				%p=  'Units: ' + lec[:units]
			.span8
				%table
					%tbody
						%tr
							%th= 'Section'
							%th= 'Time'
							%th= 'Place'
							%th= 'CCN'
							%th= 'Enrolled'
							%th= 'Waitlist'
							- lecture.each do |section|
								- sec = @info[section]
								%tr
									%td{:class => 'course'}= sec[:course].split[-2,2].join(' ')
									%td{:class => 'time'}= sec[:time]
									%td{:class => 'place'}= sec[:place]
									%td{:class => 'ccn'}= sec[:ccn]
									%td{:class => 'enrolled'}= sec[:enrolled]
									%td{:class => 'waitlist'}= sec[:waitlist]
		- if lecture != @lectures.last
			.row
				%hr
	%br
	%br
	%br