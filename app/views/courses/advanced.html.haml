	fields = [
		['dept', 		'Department', 			'CHEM, POL SCI, MCELLBI'],
		['course_num', 	'Course Number', 		'1A, H7A, 103, 160B, 25AC'],
		['course_title','Course Title', 		'CALIF, DATABASE, ENVIRON'],
		['instructor', 	'Instructor', 			'SMITH, GREEN'],
		['final', 		'Final', 				'7, 22, NONE, TBA'],
		['ccn', 		'CCN', 					'00507, 12345'],
		['days', 		'Day(s) of the Week', 	'M, TuTh, MTWTF'],
		['hours', 		'Hour(s)', 				'930-11, 10, 2-5'],
