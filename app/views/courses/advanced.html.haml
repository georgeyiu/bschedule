%br
%form{:class => 'form-horizontal', :action => '/search', :method => 'get'}
	- fields.each do |f|
		.control-group
			%label{:class => 'control-label'}= f[1]
			.controls
				%input{:name => f[0], :type => 'text', :value => '', :placeholder => f[2], :class => 'input-xlarge'}
		%input{:name => 'semester', :type => 'hidden', :value => @semester}
	.control-group
		.controls
			%button{:type => 'submit', :class => 'btn'} Search
